<h2>Index de posts</h2>

<p>
  <%= link_to 'Novo post', new_post_path %>
</p>

<% @posts.each do |post| %>
  <div>
    <p>
      Titulo:
      <%= link_to post.title, post %>
    </p>
    <p>
      Descrição:
      <%= post.description.truncate(5) %>
    </p>
    <p>
      <%= link_to 'Editar', edit_post_path(post) %> | 
      <%= link_to 'Apagar', post_path(post), method: :delete %>
    </p>
  </div>
  <br>
<% end %>

